{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "lib",
        "sourceMap": true,
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "types": ["@types/node", "./types"]
    },
    "compileOnSave": true,
    "include": ["src", "src/geojson/*.geojson", "citysdk.d.ts"]
}
