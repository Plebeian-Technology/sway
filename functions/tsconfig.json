{
    "compilerOptions": {
        "target": "es6",
        "module": "Node16",
        "moduleResolution": "Node16",
        "lib": ["dom", "dom.iterable", "ES2021"],

        "outDir": "lib",

        "strict": true,
        "sourceMap": true,
        "noImplicitReturns": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,

        "types": ["@types/node", "./types"]
    },
    "compileOnSave": true,
    "include": ["src", "enums", "constants", "utils", "fire", "src/geojson/*.json"]
}
