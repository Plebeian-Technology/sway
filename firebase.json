{
    "hosting": {
        "public": "./build",
        "ignore": ["firebase.json", "**/.*", "**/**/node_modules/"],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    },
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "functions": {
        "source": "./functions",
        "runtime": "nodejs14",
        "predeploy": "./functions/predeploy.sh"
    },
    "emulators": {
        "auth": {
            "enabled": true
        },
        "functions": {
            "enabled": true
        },
        "firestore": {
            "enabled": true
        },
        "ui": {
            "enabled": true
        }
    }
}
