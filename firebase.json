{
  "hosting": {
    "public": "./packages/webapp/build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/**/node_modules/"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": [
    {
      "target": "sway-dev",
      "rules": "firestorage.rules"
    }
  ],
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "source": "functions",
    "predeploy": "npm --prefix \"$RESOURCE_DIR\" run build"
  },
  "emulators": {
    "auth": {
      "enabled": true,
      "port": 9099
    },
    "functions": {
      "enabled": true,
      "port": 5001
    },
    "firestore": {
      "enabled": true,
      "port": 8080
    },
    "ui": {
      "enabled": true
    },
    "storage": {
      "enabled": true,
      "port": 9199
    },
    "pubsub": {
      "enabled": true,
      "port": 8085
    },
    "hosting": {
      "port": 5000
    }
  }
}
