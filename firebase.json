{
    "hosting": {
        "public": "./packages/webapp/build",
        "ignore": ["firebase.json", "**/.*", "**/**/node_modules/"],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    },
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "functions": {
        "source": "functions",
        "predeploy": "npm --prefix \"$RESOURCE_DIR\" run build"
    },
    "emulators": {
        "auth": {
            "enabled": true
        },
        "functions": {
            "enabled": true
        },
        "firestore": {
            "enabled": true
        },
        "ui": {
            "enabled": true
        }
    }
}
