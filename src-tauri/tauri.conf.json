{
    "$schema": "../node_modules/@tauri-apps/cli/schema.json",
    "build": {
        "beforeBuildCommand": "npm run build",
        "beforeDevCommand": "npm run start",
        "devPath": "http://localhost:3333",
        "distDir": "../packages/webapp/build"
    },
    "package": {
        "productName": "Sway",
        "version": "0.1.0"
    },
    "tauri": {
        "allowlist": {
            "all": true
        },
        "bundle": {
            "active": true,
            "category": "Education",
            "copyright": "Plebeian Technologies, Inc. 2022",
            "deb": {
                "depends": []
            },
            "externalBin": [],
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "identifier": "vote.tauri.sway",
            "longDescription": "",
            "macOS": {
                "entitlements": null,
                "exceptionDomain": "",
                "frameworks": [],
                "providerShortName": null,
                "signingIdentity": null,
                "minimumSystemVersion": "10.13",
                "license": "../build/license.txt"
            },
            "resources": [],
            "shortDescription": "",
            "targets": "all",
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": ""
            }
        },
        "security": {
          "csp": null
        },
        "updater": {
          "active": false
        },
        "windows": [
          {
            "fullscreen": false,
            "height": 900,
            "resizable": true,
            "title": "Sway",
            "width": 1440,
            "fileDropEnabled": false,
            "transparent": true,
            "center": true
          }
        ]
    }
}
